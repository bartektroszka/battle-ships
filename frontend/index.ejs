<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <title>Battle Ships</title>
    <link rel="shortcut icon" href="/public/favicon.ico" />
    <link rel="stylesheet" href="styles/style.css" />
    <script src="scripts/game.js" charset="utf-8"></script>
  </head>
  <body>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      var socket = io();
      socket.emit('roomId', <%= roomId %>)
    </script>
    <div class="container-2" id="gamecontainer">
      <div class="grid grid-computer"></div>
    </div>
    <div class="container">
      <div class="letters">
        <div class="let-div"></div>
        <div class="let-div">A</div>
        <div class="let-div">B</div>
        <div class="let-div">C</div>
        <div class="let-div">D</div>
        <div class="let-div">E</div>
        <div class="let-div">F</div>
        <div class="let-div">G</div>
        <div class="let-div">H</div>
        <div class="let-div">I</div>
        <div class="let-div">J</div>
      </div>
      <div>
        <div class="numbers">
          <div class="num-div">1</div>
          <div class="num-div">2</div>
          <div class="num-div">3</div>
          <div class="num-div">4</div>
          <div class="num-div">5</div>
          <div class="num-div">6</div>
          <div class="num-div">7</div>
          <div class="num-div">8</div>
          <div class="num-div">9</div>
          <div class="num-div">10</div>
        </div>
        <div class="grid your-ships"></div>
      </div>
      <div class="container-3">
        <div class="deploy-ships">
          <div class="ship shortest" length="2" draggable="true">
            <div class="left-end" id="shortest-0"></div>
            <div id="shortest-1"></div>
          </div>
          <div class="ship short" length="3" draggable="true">
            <div id="short-0"></div>
            <div id="short-1"></div>
            <div id="short-2"></div>
          </div>
          <div class="ship short2" length="3" draggable="true">
            <div id="short2-0"></div>
            <div id="short2-1"></div>
            <div id="short2-2"></div>
          </div>
          <div class="ship long" length="4" draggable="true">
            <div id="long-0"></div>
            <div id="long-1"></div>
            <div id="long-2"></div>
            <div id="long-3"></div>
          </div>
          <div class="ship longest" length="5" draggable="true">
            <div id="longest-0"></div>
            <div id="longest-1"></div>
            <div id="longest-2"></div>
            <div id="longest-3"></div>
            <div id="longest-4"></div>
          </div>
        </div>
        <div class="hidden-info">
          <button id="start">Start Game</button>
          <button id="rotate">Rotate Your Ships</button>
          <h3 id="whose-go">Place all of your ships on the board.</h3>
          <h3 id="info"></h3>
        </div>
      </div>
    </div>
  </body>
</html>
